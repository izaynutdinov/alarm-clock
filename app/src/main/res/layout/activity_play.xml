<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.iskandar.alarmclock.PlayActivity"
    android:background="#5191c9"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Please solve problems\n to stop alarm"
        android:gravity="center"
        android:layout_marginBottom="40px"
        android:textSize="10pt"
        android:textColor="@android:color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/time_picker_back"
        android:padding="20px"
        android:orientation="vertical"
        android:showDividers="middle">

        <net.iskandar.alarmclock.components.ExcerciseView
            android:id="@+id/exercise1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

        </net.iskandar.alarmclock.components.ExcerciseView>
        <net.iskandar.alarmclock.components.ExcerciseView
            android:id="@+id/exercise2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

        </net.iskandar.alarmclock.components.ExcerciseView>

        <net.iskandar.alarmclock.components.ExcerciseView
            android:id="@+id/exercise3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

        </net.iskandar.alarmclock.components.ExcerciseView>



    </LinearLayout>

</LinearLayout>
